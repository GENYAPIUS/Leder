        <div class="container" style="margin-top:20px;">

            <nav class="navbar navbar-default navbar-fixed-top" style="height:auto;background-color: rgba(255,255,255,0.95);border:none;padding:0 0 0 0">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar" style="margin-top:20px;background-color:brown">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <span class="aa-logo" style="margin-top:20px;margin-left:20px;margin-right:20px">
                            <a href="~/Home/Index">
