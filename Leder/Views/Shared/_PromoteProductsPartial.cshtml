                                    <div class="aa-single-promo-right">
                                        <div class="aa-promo-banner">
                                            <img src=@item.PhotoUrl alt=@item.ProductName>
                                            <div class="aa-prom-content">
                                                <span>@item.DiscountWord</span>
                                                <h4><a href="#">@item.Statement</a></h4>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                        <!-- / promo 4 products -->

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Promo section2 -->

