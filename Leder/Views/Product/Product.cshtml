@model IEnumerable<Leder.Models.Product>

@{
    ViewBag.Title = "Product";
}

<h2>Product</h2>

<!--旋轉木馬-->
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleSlides2" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleSlides2" data-slide-to="1"></li>
        <li data-target="#carouselExampleSlides2" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Assets/images/carousel.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Assets/images/carousel2.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Assets/images/carousel3.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleSlides2" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleSlides2" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<!--頁面左邊的商品選單-->
<div class="mt-3 container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="demo">
                <div id="accordion" role="tablist">
                    <div class="card">
                        <div class="card-header" role="tab" id="headingOne">
                            <h5 class="my-0">
                                <a data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    背包類
                                </a>
                            </h5>
                        </div>

                        <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne">
                            <div class="card-body">
                                後背包
                                <br />
                                側背包
                                <br />

                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" role="tab" id="headingTwo">
                            <h5 class="my-0">
                                <a class="collapsed" data-toggle="collapse" href="#collapseTwo" aria-expanded="false"
                                   aria-controls="collapseTwo">
                                    錢包類
                                </a>
                            </h5>
                        </div>
                        <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo">
                            <div class="card-body">
                                零錢包
                                <br />
                                長夾
                                <br />
                                名片夾
                                <br />
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" role="tab" id="headingThree">
                            <h5 class="my-0">
                                <a class="collapsed" data-toggle="collapse" href="#collapseThree" aria-expanded="false"
                                   aria-controls="collapseThree">
                                    其他
                                </a>
                            </h5>
                        </div>
                        <div id="collapseThree" class="collapse" role="tabpanel" aria-labelledby="headingThree">
                            <div class="card-body">
                                商品類別
                                <br />
                                商品類別
                                <br />
                                商品類別
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--頁面右邊的商品陳列-->
        <div class="col-md-9">
            <div class="row">
                <div class="card-deck">
                    @foreach (var p in Model)
                    {
                        @Html.Partial("_ProductPartial", p);
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section topCSS{
    <link href="~/Assets/css/card.css" rel="stylesheet" />
}
