@using Leder.ViewModels;
@using System.Diagnostics;
@model IEnumerable<Leder.Models.Cart.CartItem>

@{
    ViewBag.Title = "Order";
    OrderViewModel orders = (OrderViewModel)ViewData["RecieverData"];
    Debug.WriteLine($"Email of cash is {orders.Email}");
    Debug.WriteLine($"Phone of cash is {orders.RecieverPhone}");
}

<section id="cart-view">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cart-view-area">
                    <div class="cart-view-table">
                        <form action="">
                            <div class="table-responsive">
                                <h2>結帳頁面</h2>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Email</th>
                                            <th>收貨人姓名</th>
                                            <th>收貨人電話</th>
                                            <th>收貨人地址</th>
                                            <th>郵遞區號</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@orders.Email</td>
                                            <td>@ViewData["RecieverName"]</td>
                                            <td>@ViewData["RecieverPhone"]</td>
                                            <td>@ViewData["RecieverAddress"]</td>
                                            <td>@ViewData["RecieverZipCode"]</td>
                                        </tr>

                                    </tbody>
                                </table>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayNameFor(m => m.Photo)</th>
                                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                                            <th>單價</th>
                                            <th>數量</th>
                                            <th>總價</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var i in Model)
                                        {
                                            <tr>
                                                <td><a href="#"><img src="@Html.DisplayFor(m=>i.Photo)" alt="img"></a></td>
                                                <td><a class="aa-cart-title" href="#">@Html.DisplayFor(m => i.Name)</a></td>
                                                <td>@Html.DisplayFor(m => i.Price)</td>
                                                <td><a class="aa-cart-quantity">@Html.DisplayFor(m => i.Quantity)</a></td>
                                                <td>@Html.DisplayFor(m => i.Amount)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </form>
                        <!-- Cart Total view -->
                        <div class="cart-view-total">
                            <table class="aa-totals-table">
                                <tbody>
                                    <tr>
                                        <th>Total</th>
                                        <td>NTD $ @String.Format("{0}", orders.Carts.TotalAmount)</td>
                                        @*<td>USD $ @String.Format("{0}", (currentCart.TotalAmount) / 30.1m)</td>*@
                                    </tr>
                                </tbody>

                            </table>
                            <button id="OrderSubmit" class="aa-browse-btn" type="button" name="OrderSubmit" style="margin-top: 20px;">確認送出</button>

                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{

}

