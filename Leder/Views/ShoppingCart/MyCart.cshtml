@model IEnumerable<Leder.Models.ShoppingCartViewModels>

@{
    ViewBag.Title = "MyCart";
}

<h2>MyCart</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(x=>x.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(x=>x.Product.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Photo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Product.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Product.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Product.Id })
        </td>
    </tr>
}

</table>
